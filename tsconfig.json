{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./app",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./app/src",
    "paths": {
      "root/*": ["*"],
      "main/*": ["main/*"],
      "renderer/*": ["renderer/*"]
    }
  },
  "include": ["app/src/**/*.ts"],
  "exclude": ["node_modules"]
}
