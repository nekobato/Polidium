html, body {
  width: 100%;
  height: 100%;
  background-color: transparent;
}

.monitor {
  width: 100%;
  height: 100%;
}

video.video-player,
webview.webview {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 100%;
  height: 100%;
  object-fit: contain;
  background-color: transparent;
}
