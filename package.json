{
  "name": "Polidium",
  "productName": "Polidium",
  "version": "2.0.3",
  "description": "Polid Movie Screen",
  "main": "./app/main.js",
  "scripts": {
    "start": "DEBUG=true electron ./app",
    "test": "npm run test:unit && npm run test:e2e",
    "dev": "NODE_ENV=development npm run watch & npm start",
    "watch": "npm run watch:renderer & npm run watch:main",
    "watch:renderer": "webpack --watch --watch-poll --config ./webpack.renderer.config.js",
    "watch:main": "webpack --watch --watch-poll --config ./webpack.main.config.js",
    "build": "npm run build:renderer & npm run build:main",
    "build:renderer": "webpack --progress --hide-modules --config ./webpack.renderer.config.js",
    "build:main": "webpack --progress --hide-modules --config ./webpack.main.config.js",
    "test:unit": "karma start test/unit/karma.conf.js",
    "test:e2e": "npm run pack && mocha test/e2e",
    "pack": "npm run build && build --dir ./"
  },
  "build": {
    "appId": "net.nekobato.polidium",
    "files": [
      "!src"
    ],
    "asar": true,
    "linux": {
      "arch": [
        "ia32",
        "x64"
      ],
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ]
    },
    "win": {
      "icon": "./app/app.ico",
      "target": [
        "squirrel"
      ]
    },
    "mac": {
      "category": "public.app-category.video",
      "icon": "./app/app.icns",
      "target": "default"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nekobato/Polidium.git"
  },
  "keywords": [],
  "author": "nekobato",
  "bugs": {
    "url": "https://github.com/nekobato/Polidium/issues"
  },
  "homepage": "https://github.com/nekobato/Polidium",
  "devDependencies": {
    "chai": "^5.2.0",
    "css-loader": "^7.1.2",
    "devtron": "^1.4.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-debug": "^4.1.0",
    "file-loader": "^6.2.0",
    "jade": "^1.11.0",
    "jasmine-core": "^5.7.1",
    "karma": "^6.4.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-electron": "^7.3.0",
    "karma-jasmine": "^5.1.0",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-spec-reporter": "0.0.36",
    "karma-webpack": "^5.0.1",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^1.0.0",
    "mocha": "^11.5.0",
    "node-loader": "^2.1.0",
    "sortablejs": "^1.15.6",
    "spectron": "^19.0.0",
    "style-loader": "^4.0.0",
    "stylus": "^0.64.0",
    "stylus-loader": "^8.1.1",
    "ts-loader": "^9.5.0",
    "typescript": "^5.4.5",
    "url-loader": "^4.1.1",
    "vue": "^3.5.16",
    "vue-loader": "^17.4.2",
    "vue-template-compiler": "^2.7.16",
    "vuex": "^4.1.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1",
    "xss": "^1.0.15"
  },
  "dependencies": {
    "@sentry/electron": "^3.0.8",
    "electron-updater": "^2.23.3",
    "xss": "^1.0.15"
  }
}
