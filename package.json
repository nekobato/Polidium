{
  "name": "Polidium",
  "productName": "Polidium",
  "version": "2.0.3",
  "description": "Polid Movie Screen",
  "main": "./dist-electron/main.js",
  "scripts": {
    "start": "electron .",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "dev": "vite",
    "build": "vite build",
    "test:unit": "karma start test/unit/karma.conf.js",
    "test:e2e": "pnpm run pack && mocha test/e2e",
    "pack": "pnpm run build && build --dir ./"
  },
  "build": {
    "appId": "net.nekobato.polidium",
    "files": [
      "!src"
    ],
    "asar": true,
    "linux": {
      "arch": [
        "ia32",
        "x64"
      ],
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ]
    },
    "win": {
      "icon": "./app/app.ico",
      "target": [
        "squirrel"
      ]
    },
    "mac": {
      "category": "public.app-category.video",
      "icon": "./app/app.icns",
      "target": "default"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nekobato/Polidium.git"
  },
  "keywords": [],
  "author": "nekobato",
  "bugs": {
    "url": "https://github.com/nekobato/Polidium/issues"
  },
  "homepage": "https://github.com/nekobato/Polidium",
  "devDependencies": {
    "css-loader": "^7.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-debug": "^4.1.0",
    "file-loader": "^6.2.0",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^1.0.0",
    "node-loader": "^2.1.0",
    "sortablejs": "^1.15.6",
    "style-loader": "^4.0.0",
    "sass-embedded": "^1.89.1",
    "ts-loader": "^9.5.0",
    "typescript": "^5.4.5",
    "url-loader": "^4.1.1",
    "vue": "^3.5.16",
    "vue-loader": "^17.4.2",
    "vuex": "^4.1.0",
    "vite": "^5.2.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "dependencies": {
    "@sentry/electron": "^3.0.8",
    "electron-updater": "^2.23.3",
    "xss": "^1.0.15"
  },
  "packageManager": "pnpm@10.5.2"
}
