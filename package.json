{
  "name": "polidium",
  "productName": "Polidium",
  "version": "2.0.2",
  "description": "Polid Movie Screen",
  "main": "./main.js",
  "scripts": {
    "pack": "npm run build && build --dir ./",
    "start": "electron .",
    "dev": "npm run build:main && DEBUG=true electron ./dist/main/main.js",
    "serve": "vue-cli-service serve",
    "serve:browser": "NODE_ENV=browser vue-cli-service serve",
    "build": "vue-cli-service build && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "test:unit": "vue-cli-service test:unit"
  },
  "build": {
    "appId": "net.nekobato.polidium",
    "files": [
      "!src"
    ],
    "asar": true,
    "linux": {
      "arch": [
        "ia32",
        "x64"
      ],
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ]
    },
    "win": {
      "icon": "./app/app.ico",
      "target": [
        "squirrel"
      ]
    },
    "mac": {
      "category": "public.app-category.video",
      "icon": "./app/app.icns",
      "target": "default"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nekobato/Polidium.git"
  },
  "keywords": [],
  "author": "nekobato",
  "bugs": {
    "url": "https://github.com/nekobato/Polidium/issues"
  },
  "homepage": "https://github.com/nekobato/Polidium",
  "dependencies": {
    "electron": "^5.0.0",
    "electron-widevinecdm-dev": "github:oscartbeaumont-ext/electron-widevinecdm-dev",
    "sass": "^1.20.1",
    "sass-loader": "^7.1.0",
    "vue": "^2.6.6",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@vue/cli-plugin-typescript": "^3.4.0",
    "@vue/cli-plugin-unit-jest": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "electron-builder": "^10.7.0",
    "electron-ipc-mock": "0.0.3",
    "electron-widevinecdm": "^7.0.0",
    "ts-jest": "^23.0.0",
    "typescript": "^3.0.0",
    "vue-svg-loader": "^0.12.0",
    "vue-template-compiler": "^2.5.21"
  }
}
